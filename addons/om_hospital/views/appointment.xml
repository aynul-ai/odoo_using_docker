<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="hospital_appointment_view_form" model="ir.ui.view">
        <field name="name">hospital.appointment.view.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Hospital Appointment">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}" statusbar_visible="done,confirm,draft"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h1>

                    </div>
                    <group>
                        <group>
                            <field name="patient_id" />
                            <field name="patient_gender" />
                            <field name="ref" />

                        </group>
                        <group>
                            <field name="appointment_time" />
                            <field name="booking_date" />
                            <button name="object_test" string="object Button" type="object" class="oe_highlight"/>
                            <button name="%(om_hospital.action_hospital_patinent)d" string="Action Button" type="action" class="oe_highlight"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Prescription">
                              <field name="prescription" placeholder="Enter your prescription"/>  
                        </page>
                        <page name="Pharmacy">

                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record id="hospital_appointment_view_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.view.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="Hospital Appointment">
                <field name="patient_id" />
            </tree>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appoinetment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to Create New Appointment
            </p>

        </field>
    </record>

</odoo>